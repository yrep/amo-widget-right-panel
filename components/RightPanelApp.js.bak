define([
  './../lib/preact.min.js',
  './../lib/htm.min.js'
], function (preact, htm) {

  console.debug('App component');

  const { h, render, Component } = preact;
  const html = htm.bind(h);

  class Counter extends Component {
    constructor(props) {
      super(props);
      this.state = { count: 0 };
      this.onButtonClick = this.onButtonClick.bind(this);
    }
    
    onButtonClick() {
      this.setState({ count: this.state.count + 1 });
    }

    render() {
      return html`
        <div>
          <h1>Hello from widget App</h1>
          <button onClick=${this.onButtonClick}>
            Increment
          </button>
          <p>Counter: ${this.state.count}</p>
        </div>
      `;
    }
  }

  const App = () => {
    return html`
      <div style="padding: 10px;">
        <h3 style="margin-bottom: 10px;">Заголовок окна виджета</h3>
        <${Counter} />
      </div>
    `;
  };

  const mount = (rootElement) => {
    console.debug('Passed root element', rootElement);
    if (rootElement) {
      console.debug('Before render');
      render(html`<${App} />`, rootElement);
    }
  };

  return {
    mount: mount,
  };
});
